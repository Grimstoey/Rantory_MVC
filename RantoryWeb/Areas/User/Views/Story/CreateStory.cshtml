@model ChapterStoryVM

<!-- Create Story Start -->
<div class="team-item rounded p-4">

    <form method="post" action="CreateStory">

        <input asp-for="Story.UserId" hidden />
        <input asp-for="Chapter.UserId" hidden />
        <img class="img-fluid rounded mb-4" src="img/team-1.jpg" alt="">
        <div class="pt-3">
            <p class="my-section-title bg-white text-center px-3">Chapter 1</p>
            @* <h4>Chapter Name</h4> *@
        </div>

        <div class="chapter-form-container">
            <div class="mt-3 chapter-form-floating">

                <input asp-for="Chapter.ChapterName" type="text" class="chapter-form-control" id="name" placeholder="">
                <label asp-for="Chapter.ChapterName"></label>
                <span asp-validation-for="Chapter.ChapterName" class="my-text-danger"></span>

            </div>
        </div>
        
        <div>
            <textarea asp-for="Chapter.Content" id="mytextarea"></textarea>
        </div>

        <div class="button-container-end mt-5">
            <a asp-area="User" asp-controller="Home" asp-action="Index" type="submit" class="save-button save-box">
                Finish
            </a>
            <button type="submit" class="save-button save-box">
                Save
            </button>
        </div>

    </form>
</div>
<!-- Create Story End -->
