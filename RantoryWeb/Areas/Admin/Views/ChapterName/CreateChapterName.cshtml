@model ChapterNameSource


@{
    string? alert = TempData["SuccessAddChapterName"] as string;
    string? alertFailed = TempData["CreationFailed"] as string;
    string? newChapterName = TempData["NewChapterName"] as string;
}


<!-- Chapter Name Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="wow fadeInUp" data-wow-delay="0.1s">
                <p class="my-section-title bg-white text-center px-3">Manage</p>
                <h2 class="mb-2">Chapter Name For Random</h2>
                <p class="mb-4" style="font-size:large">Generate random chapter names.<br>Let's create challenges, fun, and imagination that users never expected before.</br></p>
            </div>
            <div class="col-lg-6 d-flex justify-content-center">
                <div class="overflow-hidden">
                    <div class="row g-0 mb-4">
                        <div class="col-sm-6 wow fadeIn" data-wow-delay="0.1s">
                            <div class="text-center py-5 px-2" style="background-color:#86275e; border-radius:20px; margin-right:3px; margin-bottom:3px">
                                <h1 class="display-6" style="color:#fff9cc" data-toggle="counter-up">25</h1>
                                <span class="fs-5 fw-semi-bold" style="color:#fff9cc">Years Experience</span>
                            </div>
                        </div>
                        <div class="col-sm-6 wow fadeIn" data-wow-delay="0.3s">
                            <div class="text-center py-5 px-2" style="background-color:#217243; border-radius:20px; margin-left:3px; margin-bottom:3px">
                                <h1 class="display-6" style="color:#fff9cc" data-toggle="counter-up">183</h1>
                                <span class="fs-5 fw-semi-bold" style="color:#fff9cc">Award Winning</span>
                            </div>
                        </div>
                        <div class="col-sm-6 wow fadeIn" data-wow-delay="0.5s">
                            <div class="text-center py-5 px-2" style="background-color:#217243; border-radius:20px; margin-right:3px; margin-top:3px">
                                <h1 class="display-6" style="color:#fff9cc" data-toggle="counter-up">2619</h1>
                                <span class="fs-5 fw-semi-bold" style="color:#fff9cc">Total Animals</span>
                            </div>
                        </div>
                        <div class="col-sm-6 wow fadeIn" data-wow-delay="0.7s">
                            <div class="text-center py-5 px-2" style="background-color:#86275e; border-radius:20px; margin-left:3px; margin-top:3px">
                                <h1 class="display-6" style="color:#fff9cc" data-toggle="counter-up">51940</h1>
                                <span class="fs-5 fw-semi-bold" style="color:#fff9cc">Happy Clients</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <h5>Add New Chapter Name</h5>

                <!-- Alert Start -->
                @if (!string.IsNullOrEmpty(alert) || !string.IsNullOrEmpty(alertFailed))
                {
                    if (alert == "Chapter name created successfully.")
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong><i class="bi bi-check-circle"></i> Successfully !</strong> " @newChapterName " has been successfully created !
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    else if (alertFailed == "Chapter name creation failed.")
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong><i class="bi bi-x-circle"></i> The chapter name you provided already exists !</strong> Please select another name.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong><i class="bi bi-x-circle"></i> Failed to add the chapter name !</strong> Unable to added. An error occurred while processing your request.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                }

                <form method="post" action="CreateChapterName">

                    <div class="chapter-form-container row g-2">                      
                        <div class="chapter-form-floating col-auto">                           
                            <input asp-for="Name" type="text" class="chapter-form-control" placeholder="">
                            <label asp-for="Name"></label>
                            <span asp-validation-for="Name" class="my-text-danger"></span>                          
                        </div>
                        <div class="col-auto">
                            <button class="save-button save-box" style="width:120px; height:47px;" href=""><i class="bi bi-plus-circle" style="font-size:large"></i> Add</button>
                        </div>
                    </div>
                   
                </form>
                
            </div>
        </div>
    </div>
</div>

<!-- Chapter Name End -->


